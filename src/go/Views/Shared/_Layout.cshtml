                                        <li><a href="/IV/Sale/">@HtmlLang.Write(LangModule.BD, "Sales", "Sales")</a></li>
                                        <li><a href="/IV/Purchase/">@HtmlLang.Write(LangModule.BD, "Purchases", "Purchases")</a></li>
                                        <li><a href="">@HtmlLang.Write(LangModule.BD, "PayRun", "Pay Run")</a></li>
                                        <li><a href="">@HtmlLang.Write(LangModule.BD, "ExpenseClaims", "Expense Claims")</a></li>
                                        <li><a href="">@HtmlLang.Write(LangModule.BD, "FixedAssets", "Fixed Assets")</a></li>*@
                                </ul>
                            </li>
                            <li class="mg-menu-m">
                                <a href="#" class="mg-menu-m-name" data-module="report">@HtmlLang.Write(LangKey.Reports)</a>
                                <ul class="mg-menu-s">
                                    @HtmlSECMenu.SelectLiHtml("Reports")
                                    @*<li><a href="/Report">@HtmlLang.Write(LangModule.BD, "AllReports", "All Reports")</a></li>
                                        <li><a href="">@HtmlLang.Write(LangModule.BD, "BudgetManager", "Budget Manager")</a></li>
                                        <li class="favorite"><a href="">@HtmlLang.Write(LangModule.BD, "AgedPayables", "Aged Payables")</a></li>
                                        <li class="favorite"><a href="">@HtmlLang.Write(LangModule.BD, "AgedReceivables", "Aged Receivables")</a></li>
                                        <li class="favorite"><a href="">@HtmlLang.Write(LangModule.BD, "BalanceSheet", "Balance Sheet")</a></li>
                                        <li class="favorite"><a href="">@HtmlLang.Write(LangModule.BD, "CashSummary", "Cash Summary")</a></li>
                                        <li class="favorite"><a href="">@HtmlLang.Write(LangModule.BD, "ProfitAndLoss", "Profit and Loss")</a></li>
