                                </ul>
                            </li>
                            <li class="mg-menu-m">
                                <a href="#" class="mg-menu-m-name" data-module="adviser">@HtmlLang.Write(LangKey.Adviser)</a>
                                <ul class="mg-menu-s">
                                    @HtmlSECMenu.SelectLiHtml("Adviser")
                                </ul>
                            </li>
                            <li class="mg-menu-m">
                                <a href="#" class="mg-menu-m-name" data-module="contact">@HtmlLang.Write(LangKey.Contacts)</a>
                                <ul class="mg-menu-s">
                                    @HtmlSECMenu.SelectLiHtml("Contacts")
                                    @*<li><a href="/Contacts/ContactsList">@HtmlLang.Write(LangModule.BD, "All Contacts", "All Contacts")</a></li>
                                        <li><a href="">@HtmlLang.Write(LangModule.BD, "SmartLists", "Smart Lists")</a></li>
