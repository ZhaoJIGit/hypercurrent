                        </ul>
                    </div>
                    <div class="mg-block-b">
                        <ul>
                            <li><a href="/Docs/Folders" class="mg-file">&nbsp;</a></li>
                            <li><a href="@ServerHelper.MyServer/Message/MessageList" class="mg-inbox">&nbsp;</a></li>
                            <li><a href="" class="mg-help">&nbsp;</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        @{if (@ViewBag.Position != null && !string.IsNullOrEmpty(@ViewBag.Position))
            {

                <div data-role="crumb">
                    <div class="mg-wrapper">
                        <div class="mg-block-a">@ViewBag.Position</div>
                        <div class="mg-block-b">
                            @{
                                if (@ViewData["Crumb"] != null && @ViewData["Crumb"].ToString().Length > 0)
                                {
                                    <span class="crumb-postion-promt">@HtmlLang.Write(LangModule.BD, "YouAreHere:", "You are here:")</span>@ViewData["Crumb"]
                                }
                            }
                        </div>
                    </div>
                </div>
                                }}
        <div data-role="content">
            @RenderBody()
        </div>
        <div data-role="footer">

        </div>
    </div>
    <div id="divDialogContainer"></div>
    @HtmlLang.OrgLang()
