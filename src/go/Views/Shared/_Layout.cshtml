    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="@ServerHelper.StaticServer/include/easyui/blue/easyui.css?@ServerHelper.JSVersion" rel="stylesheet" />
    <link href="@ServerHelper.StaticServer/include/easyui/icon.css?@ServerHelper.JSVersion" rel="stylesheet" />
    <link href="@ServerHelper.StaticServer/FW/themes/base/css.css?@ServerHelper.JSVersion" rel="stylesheet" />
    @RenderSection("Css", false)

    <script src="@ServerHelper.StaticServer/fw/scripts/jquery-1.8.2.min.js?@ServerHelper.JSVersion"></script>
