@{
    Layout = "~/Areas/Report/Views/Shared/_LayoutReport.cshtml";
}
@using JieNor.Megi.Common.Utility
<div id="tabSalesTax" class="easyui-tabs" style="margin-left: 10px;margin-top: 20px;">
    <div title="@HtmlLang.Write(LangModule.Report, "TaxSummary", "Tax Summary")" data-options="selected:true">
        <div class="m-form-vtcl m-form-min">
            <div class="m-form-vtcl-content">
                <div class="m-form-section section-type">
                    <div class="m-form-item">
                        <ul>
                            <li class="m-bold">@HtmlLang.Write(LangKey.From)</li>
                            <li>
                                <input type="text" class="easyui-datebox mg-data" name="MFromDate" id="FromDate" value="@HtmlLang.GetCurrentMonthDate(true)" />
                            </li>
                        </ul>
                    </div>
                    <div class="m-form-item">
                        <ul>
                            <li class="m-bold">@HtmlLang.Write(LangKey.To)</li>
                            <li>
                                <input type="text" class="easyui-datebox mg-data" name="MToDate" id="ToDate" value="@HtmlLang.GetCurrentMonthDate(false)" />
                            </li>
                        </ul>
                    </div>
                    <div class="m-form-item">
                        <ul>
                            <li class="m-bold">@HtmlLang.Write(LangModule.Report, "ShowByTaxRate", "Show by Tax Rate")</li>
                            <li>
                                <input type="checkbox" class="mg-data" name="ShowByTaxRate" />
                            </li>
                        </ul>
                    </div>
                    <div class="m-form-item">
                        <ul>
                            <li class="m-bold">@HtmlLang.Write(LangModule.Report, "ShowByTaxComponent ", "Show by Tax Component")</li>
                            <li>
                                <input type="checkbox" class="mg-data" name="ShowByTaxComponent" checked="checked" />
                            </li>
                        </ul>
                    </div>
                    <div class="m-form-item">
                        <ul>
                            <li><a href="javascript:void(0)" class="m-btn l-btn" id="aReportUpdate">@HtmlLang.Write(LangModule.Report, "Update", "Update")</a></li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    <div title="@HtmlLang.Write(LangModule.Report, "TaxAuditReport", "Tax Audit Report")">
    </div>
</div> 


<script src="@ServerHelper.ScriptServer/scripts/Report/RptUC/SalesTaxReport.js?@ServerHelper.JSVersion"></script>
@HtmlLang.WriteScript(LangModule.Report)