@{
    Layout = "~/Areas/FW/Views/Shared/_Layout.cshtml";
}
<div id="divEdit" class="m-form m-imain" style="padding-left:20px">
    <div class="m-form-item">
        <span>@HtmlLang.Write(LangModule.Contact, "BankAccName", "Account Balance")</span>
        <br />
        <span><input type="text" class="easyui-validatebox mg-data" style="height: 18px; line-height: 18px; width: 150px" value="@ViewData["name"]" disabled />  </span>
        <br />
        <span> @HtmlLang.Write(LangModule.Bank, "Balance", "Account Balance")</span>
        <br />       
        <input type="text" id="balances" class="easyui-numberbox" precision="2" value="@ViewData["balance"]" data-options="required:true" />

    </div>
    <input type="hidden" class="mg-data" value="@ViewData["accountId"]" id="accountId" />
    <input type="hidden" class="mg-data" value="@ViewData["mcyId"]" id="mcyId"/>
</div>
<div class="m-toolbar-footer">
    @if (HtmlSECMenu.HavePermission(BizObject.Contact, PermissionItem.Change))
    {
        <div class="left">
            <a href="javascript:void(0)" class="easyui-linkbutton easyui-linkbutton-gray" id="aCancel">@HtmlLang.Write(LangKey.Cancel)</a>
        </div>
        <div class="right">
            <a href="javascript:void(0)" class="easyui-linkbutton easyui-linkbutton-yellow" id="aSave">@HtmlLang.Write(LangKey.Save)</a>
        </div>
    }
</div>
<script src="@ServerHelper.ScriptServer/Scripts/BD/Account/AccountBalancesEdit.js?@ServerHelper.JSVersion"></script>
@HtmlLang.WriteScript(LangModule.Bank)
@JieNor.Megi.Identity.HtmlHelper.HtmlLang.WriteEasyuiLocalJs(LangIndentity.CurrentLangID)
