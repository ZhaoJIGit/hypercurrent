                                    </td>
                                    <td class="td-bold td-title id-doc-total">
                                        @HtmlLang.Write(LangModule.BD, "ForCurrency", "(原币）"):
                                    </td>
                                    <td class="td-money">
                                        <span class="id-doc-for-span" />
                                    </td>
                                </tr>
                            </table>
