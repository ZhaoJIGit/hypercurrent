@{
    
    Layout = "~/Areas/FW/Views/Shared/_Layout.cshtml";
    IVReceiveModel model = ViewData["ReceiveModel"] as IVReceiveModel;

    bool isEdit = model.MActionPermission.MIsInitCanEdit;
}
@using JieNor.Megi.Common.Utility;
@Html.Partial("ReceiptPartial/ReceiptEditPartial")
@*底部工具栏*@
<div class="m-toolbar-footer">
    <div class="left">
        <a href="javascript:void(0)" onclick="$.mDialog.close();" class="easyui-linkbutton easyui-linkbutton-gray">@HtmlLang.Write(LangKey.Cancel)</a>
    </div>
    @if (isEdit)
    { 
    <div class="right">
        <a href="javascript:void(0)" id="aSaveReceipt" class="easyui-linkbutton easyui-linkbutton-yellow">@HtmlLang.Write(LangKey.Save)</a>
    </div>
    }
    <div class="clear"></div>
</div>
<input type="hidden" value="1" id="hiddenIsInit" />
<script type="text/javascript" src="@ServerHelper.ScriptServer/Scripts/IV/Receipt/ReceiptInitEdit.js?@ServerHelper.JSVersion"></script>
@JieNor.Megi.Identity.HtmlHelper.HtmlLang.WriteEasyuiLocalJs(LangIndentity.CurrentLangID)