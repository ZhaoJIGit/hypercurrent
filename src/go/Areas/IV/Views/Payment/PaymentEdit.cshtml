@{
    Layout = "~/Areas/FW/Views/Shared/_Layout.cshtml";
    IVPaymentModel paymentModel = ViewData["PaymentModel"] as IVPaymentModel;
}
@using JieNor.Megi.Common.Utility;
@Html.Partial("PaymentPartial/PaymentEditPartial")
@*底部工具栏*@
<div class="m-toolbar-footer">
    <div class="left">&nbsp;</div>
    <div class="center">
        <div class="m-toolbar-icon" style="width:150px;">
        @{
            string mid = paymentModel == null ? string.Empty : paymentModel.MID;
        }
        @HtmlREGRelatedAttach.RelatedAttach(BizObject.Payment, mid)
        </div>
    </div>
    <div class="right">
        <a href="javascript:void(0)" id="aSavePayment" class="easyui-linkbutton easyui-linkbutton-yellow">@HtmlLang.Write(LangKey.Save)</a>
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript" src="@ServerHelper.ScriptServer/Scripts/IV/Payment/PaymentEdit.js?@ServerHelper.JSVersion"></script>