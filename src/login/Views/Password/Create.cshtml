@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = @HtmlLang.Write(LangModule.Login, "ActiveAccount", "Active Account");
    JieNor.Megi.DataModel.SEC.SECAccountModel model = ViewData["info"] as JieNor.Megi.DataModel.SEC.SECAccountModel;
}
@using JieNor.Megi.Common.Utility
<div class="m-reg-box">
    <div id="loginBox" class="m-login-box">
        <div class="container form-login-content">
            <!--<h1 class="m-logo">MEGI</h1>-->
            <div class="migi_Logo">

            </div>
            <h3>@HtmlLang.WriteFormat(LangModule.Login, "SetAccountPassword", "Hello {0}! Please set password for your account:", JieNor.Megi.Core.MultiLanguage.GlobalFormat.GetUserName(model.MFristName, model.MLastName))</h3>
            <h3>@(model.MEmailAddress)</h3>
            <div id="divSureRegister" class="main reg">
                <div class="item-wrap" style="padding-bottom:10px">
                    <input id="pwd_text" type="text" tabindex="1" hint="@HtmlLang.Write(LangModule.Login, "Password", "Password")" class="easyui-validatebox textbox reg-info-b" data-options="required:true,validType:'minLength[8]'" style="padding-left:5px" />
                    <input id="pwd" type="password" class="easyui-validatebox mg-data textbox reg-info-b" data-options="required:true,validType:'minLength[8]'" name="MPassWord" style="display: none; padding-left: 5px" />
                    <label id="pwd_tips" style="color:red;display:none">@HtmlLang.Write(LangModule.Login, "PasswordIsSimple", "密码需要包括数字，大写字母，小写字母和特殊符号")</label>
                </div>
                <div class="item-wrap" style="padding-bottom:10px">
                    <input id="rpwd_text" type="text" tabindex="0" hint="@HtmlLang.Write(LangModule.Login, "confirmpassword", "Confirm Password")" class="easyui-validatebox textbox reg-info-b" data-options="required:true,validType:'minLength[8]'" style="padding-left:5px" />
                    <input id="rpwd" type="password" class="easyui-validatebox textbox reg-info-b" data-options="required:true,validType:'minLength[8]'" style="display: none; padding-left: 5px" />
                    <label id="rpwd_tips" style="color:red;display:none">@HtmlLang.Write(LangModule.Login, "PasswordIsSimple", "密码需要包括数字，大写字母，小写字母和特殊符号")</label>
                </div>

                <div><input type="hidden" class="easyui-validatebox mg-data textbox reg-info-b" value="@(model.MEmailAddress)" name="MEmailAddress" /></div>
                <div><input type="hidden" class="easyui-validatebox mg-data textbox reg-info-b" value="@(model.MFristName)" name="MFristName" /></div>
                <div><input type="hidden" class="easyui-validatebox mg-data textbox reg-info-b" value="@(model.MLastName)" name="MLastName" /></div>
                <div><input type="hidden" class="easyui-validatebox mg-data textbox reg-info-b" value="@(model.MMobilePhone)" name="MMobilePhone" /></div>
                <input type="hidden" class="mg-data" name="SendLinkID" value="@ViewData["SendLinkID"]" />

                <div class="m-action">
                    <a href="javascript:void(0)" class="m-btn-blue" id="aCreatePassword" tabindex="0">@HtmlLang.Write(LangModule.Login, "Active", "Activate")</a>
                </div>


                <div class="m-signIn-wrap">
                    <div class="wrap-problem">@HtmlLang.WriteFormat(LangModule.Login, "HaveProblem", "Have problems? Please <a href=\"mailto:{0}\">Contact us</a> and we will work it out!", System.Configuration.ConfigurationManager.AppSettings["ServiceEmail"]) </div>
                    <div class="wrap-have-account">
                        <span>@HtmlLang.Write(LangModule.Login, "AlreadyHaveAnAccount", "Already have an account?")</span>
                    </div>
                    <div class="wrap-btn">
                        <a id="aSignInHere" href="@ServerHelper.LoginServer">@HtmlLang.Write(LangModule.Login, "SignInHere", "Sign in here")</a>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>

<input type="hidden" value="@(model.MEmailAddress)" id="hidEmail" />
<script src="@ServerHelper.StaticServer/FW/scripts/jquery.megi.password.js?@ServerHelper.JSVersion"></script>
<script src="@ServerHelper.LoginServer/login/scripts/Password/Register.js?@ServerHelper.JSVersion"></script>
<script type="text/javascript">
    window.focusSwitch("#pwd_text", "#pwd");
    window.focusSwitch("#rpwd_text", "#rpwd");
</script>
@HtmlLang.WriteScript(LangModule.Login)
@JieNor.Megi.Identity.HtmlHelper.HtmlLang.WriteEasyuiLocalJs(LangIndentity.CurrentLangID)
