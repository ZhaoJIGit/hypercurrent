@{
    ViewBag.Title = @HtmlLang.Write(LangModule.Login, "ForgetPwd", "ForgetPwd");
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@using JieNor.Megi.Common.Utility
<div class="m-reg-box">
    <div id="loginBox" class="m-login-box">
        <div class="container form-login-content m-find-pwd">

            <h1>&nbsp;</h1>
            <div class="space"></div>
            <div class="m-login-box-title">@HtmlLang.Write(LangModule.Login, "ForgotYourPassword", "Forgot your password?")</div>
            <div class="m-login-box-title-tip">@HtmlLang.Write(LangModule.Login, "ResetYourPasswrd", "Please enter your email address and we will send you the link to reset your password.")</div>

            <div id="divSendlink" class="main reg">

                <div class="item-wrap">
                    <input type="text" id="tbxEmail" class="easyui-validatebox mg-data textbox reg-info-b" style="padding-left:5px" data-label="Email" hint="@HtmlLang.Write(LangModule.Login, "EmailAddress", "Email Address")" data-options="required:true,validType:'email'" name="MEmailAddress" />
                </div>

                <div class="m-action">
                    <a href="javascript:void(0)" class="m-btn-blue" id="Sendlink">@HtmlLang.Write(LangModule.Login, "SendLink", "Send link")</a>
                </div>
                <div class="m-signIn-wrap">
                    <div class="wrap-problem">@HtmlLang.WriteFormat(LangModule.Login, "HaveProblem", "Have problems? Please <a href=\"mailto:{0}\">Contact us</a> and we will work it out!", System.Configuration.ConfigurationManager.AppSettings["ServiceEmail"]) </div>
                    <div class="wrap-have-account">
                        <span>@HtmlLang.Write(LangModule.Login, "AlreadyHaveAnAccount", "Already have an account?")</span>
                    </div>
                    <div class="wrap-btn">
                        <a id="aSignInHere" href="@ServerHelper.LoginServer">@HtmlLang.Write(LangModule.Login, "SignInHere", "Sign in here")</a>
                    </div>
                </div>
          </div>

        </div>
    </div>
</div>

<script src="@ServerHelper.LoginServer/login/scripts/Password/ForgetPassword.js?@ServerHelper.JSVersion"></script>

